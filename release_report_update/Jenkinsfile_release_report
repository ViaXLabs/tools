pipeline {
    agent any

    environment {
        VAULT_TOKEN = credentials('vault-token')
        AWS_ACCESS_KEY = credentials('aws-access-key')
        AWS_SECRET_KEY = credentials('aws-secret-key')
        GITHUB_TOKEN = credentials('github-token')
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/org/repo.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Generate Release Report') {
            steps {
                sh 'python generate_release_report.py'
            }
        }

        stage('Archive Report') {
            steps {
                archiveArtifacts artifacts: 'release_report.html', fingerprint: true
            }
        }

        stage('Notify Team') {
            steps {
                sh '''
                curl -X POST -H "Content-Type: application/json" \
                -d '{"text": "ðŸ“¢ Release Report is ready! View it here: ${BUILD_URL}/artifact/release_report.html"}' \
                https://hooks.slack.com/services/YOUR_SLACK_WEBHOOK
                '''
            }
        }
    }
}
