{
  "overrides": [
    {
      "files": [
        "**/*.yaml",
        "**/*.yml"
      ],
      "options": {
        "tabWidth": 16,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "printWidth": 100,
        "trailingComma": "none",
        "proseWrap": "preserve"
      }
    }
  ]
}
